{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://simba.spec/specification-schema.json",
  "title": "SIMBA Specification Schema",
  "description": "JSON Schema for SIMBA specification documents",
  "type": "object",
  "required": ["metadata", "sections"],
  "properties": {
    "metadata": {
      "type": "object",
      "description": "Specification metadata",
      "required": ["title", "version", "author"],
      "properties": {
        "title": {
          "type": "string",
          "description": "Specification title",
          "minLength": 1,
          "maxLength": 200
        },
        "version": {
          "type": "string",
          "description": "Semantic version (e.g., 1.0.0)",
          "pattern": "^\\d+\\.\\d+\\.\\d+$"
        },
        "author": {
          "type": "string",
          "description": "Author name or team",
          "minLength": 1
        },
        "created": {
          "type": "string",
          "description": "Creation timestamp",
          "format": "date-time"
        },
        "updated": {
          "type": "string",
          "description": "Last update timestamp",
          "format": "date-time"
        },
        "tags": {
          "type": "array",
          "description": "Specification tags",
          "items": {
            "type": "string"
          }
        },
        "category": {
          "type": "string",
          "description": "Specification category",
          "enum": ["system", "feature", "api", "architecture", "other"]
        }
      }
    },
    "sections": {
      "type": "array",
      "description": "Specification sections",
      "minItems": 0,
      "items": {
        "type": "object",
        "required": ["id", "type", "title", "order", "content"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique section identifier"
          },
          "type": {
            "type": "string",
            "description": "Section type/template",
            "enum": [
              "system-overview",
              "features",
              "rag-system",
              "tools-dynamic",
              "file-upload",
              "image-analysis",
              "reasoning",
              "data-viz",
              "references",
              "ui-features",
              "configuration",
              "export-history",
              "custom"
            ]
          },
          "title": {
            "type": "string",
            "description": "Section title",
            "minLength": 1,
            "maxLength": 100
          },
          "order": {
            "type": "number",
            "description": "Display order",
            "minimum": 0
          },
          "content": {
            "type": "object",
            "description": "Section content (structure depends on type)",
            "properties": {
              "description": {
                "type": "string"
              },
              "features": {
                "type": "array",
                "items": { "type": "string" }
              },
              "codeBlocks": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["code"],
                  "properties": {
                    "language": { "type": "string" },
                    "code": { "type": "string" },
                    "caption": { "type": "string" }
                  }
                }
              },
              "tables": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["headers", "rows"],
                  "properties": {
                    "headers": {
                      "type": "array",
                      "items": { "type": "string" }
                    },
                    "rows": {
                      "type": "array",
                      "items": {
                        "type": "array",
                        "items": { "type": "string" }
                      }
                    }
                  }
                }
              },
              "diagrams": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "type": { "type": "string" },
                    "content": { "type": "string" },
                    "caption": { "type": "string" }
                  }
                }
              }
            }
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      }
    }
  }
}
