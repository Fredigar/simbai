# SIMBA Backend - Environment Variables Example
# Copy this file to .env and fill in your values

# Application
APP_NAME=SIMBA
APP_VERSION=2.0.0
DEBUG=True
LOG_LEVEL=INFO

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Database
DATABASE_URL=sqlite+aiosqlite:///./simba.db
# For PostgreSQL: postgresql://user:password@localhost:5432/simba

# ChromaDB
CHROMA_HOST=localhost
CHROMA_PORT=8001
CHROMA_PERSIST_DIRECTORY=./chroma_data

# Redis (optional)
REDIS_URL=redis://localhost:6379/0

# OpenAI
OPENAI_API_KEY=sk-...
OPENAI_ORG_ID=org-...

# Anthropic
ANTHROPIC_API_KEY=sk-ant-...

# Other LLM Providers (optional)
MISTRAL_API_KEY=
COHERE_API_KEY=

# Security
SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# File Upload
MAX_UPLOAD_SIZE_MB=50
ALLOWED_EXTENSIONS=["pdf", "docx", "xlsx", "pptx", "png", "jpg", "jpeg", "txt", "md"]

# RAG Settings
RAG_TOP_K=10
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=200
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Tools Settings
TOOLS_CONFIG_PATH=./config/tools.yaml
TOOLS_TIMEOUT=30

# Confluence (example tool provider)
CONFLUENCE_URL=
CONFLUENCE_USER=
CONFLUENCE_API_TOKEN=

# Jira (example tool provider)
JIRA_URL=
JIRA_USER=
JIRA_API_TOKEN=
