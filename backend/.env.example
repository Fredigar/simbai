# SIMBA - Environment Variables Example
# Copy this file to .env: cp .env.example .env

# Application
DEBUG=False
LOG_LEVEL=INFO
SECRET_KEY=change-this-secret-key

# Database (Production)
# DB_PASSWORD is used by docker-compose.prod.yml
# Change this to a secure password, then update DATABASE_URL with the same password
DB_PASSWORD=change_this_password
DATABASE_URL=postgresql+asyncpg://simba:change_this_password@db:5432/simba

# LLM API Keys (Required - at least one)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# ChromaDB
CHROMA_HOST=chromadb
CHROMA_PORT=8000

# Redis
REDIS_URL=redis://redis:6379/0
