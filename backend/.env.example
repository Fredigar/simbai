# SIMBA - Environment Variables Example
# Copy this file to .env: cp .env.example .env

# Application
DEBUG=False
LOG_LEVEL=INFO
SECRET_KEY=change-this-secret-key

# Database (Production)
DATABASE_URL=postgresql+asyncpg://simba:PASSWORD@db:5432/simba
DB_PASSWORD=change_this_password

# LLM API Keys (Required - at least one)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# ChromaDB
CHROMA_HOST=chromadb
CHROMA_PORT=8000

# Redis
REDIS_URL=redis://redis:6379/0
